{
    "name": "ntoufoudis/laravel_ocr",
    "description": "Laravel Optical Character Reader (OCR) package using different OCR engines like Tesseract.",
    "keywords": [
        "laravel ocr",
        "laravelocr",
        "ocr",
        "laravel tesseract"
    ],
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/ntoufoudis/laravel-ocr/issues",
        "source": "https://github.com/ntoufoudis/laravel-ocr"
    },
    "authors": [
        {
            "name": "Vasileios Ntoufoudis",
            "email": "info@ntoufoudis.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "illuminate/support": "^11.0",
        "illuminate/console": "^11.0",
        "illuminate/filesystem": "^11.0",
        "illuminate/validation": "^11.0",
        "symfony/console": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Ntoufoudis\\LaravelOcr\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ntoufoudis\\LaravelOcr\\LaravelOcrServiceProvider"
            ],
            "aliases": {
                "Ocr": "Ntoufoudis\\LaravelOcr\\Facades\\Ocr"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.5",
        "pestphp/pest": "^3.2",
        "phpstan/phpstan": "^1.10"
    },
    "autoload-dev": {
        "psr-4": {
            "Ntoufoudis\\LaravelOcr\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    }
}
